{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Aspire AppHost",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/PoRepoLineTracker.AppHost/bin/Debug/net10.0/PoRepoLineTracker.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/PoRepoLineTracker.AppHost",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bLogin to the dashboard at\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "PoRepoLineTracker.Api (standalone)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/PoRepoLineTracker.Api/bin/Debug/net10.0/PoRepoLineTracker.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/PoRepoLineTracker.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
