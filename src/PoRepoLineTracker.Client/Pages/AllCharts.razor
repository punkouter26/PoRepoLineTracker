@page "/allcharts"
@inject HttpClient Http
@inject ILogger<AllCharts> Logger
@using PoRepoLineTracker.Application.Models
@using Radzen.Blazor

<h3>Repository Line Count Comparison</h3>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <p class="text-muted mb-4">Compare lines of code across all repositories for the past 30 days</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="spinner-border text-primary me-2" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <span>Loading repository data...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Error loading chart data:</strong> @errorMessage
                    <button type="button" class="btn btn-outline-danger btn-sm ms-3" @onclick="LoadChartData">
                        <i class="fas fa-redo me-1"></i>Retry
                    </button>
                </div>
            </div>
        </div>
    }
    else if (repositoryHistories == null || !repositoryHistories.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    No repositories found or no data available for comparison.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line me-2"></i>
                            Lines of Code Comparison (Past 30 Days)
                        </h5>
                        <small class="text-muted">@chartData.Count() total data points across @repositoryHistories.Count repositories</small>
                    </div>
                    <div class="card-body">
                        @if (chartData.Any())
                        {
                            <div style="height: 400px;">
                                <RadzenChart>
                                    @foreach (var repoGroup in GetRepositoryGroups())
                                    {
                                        <RadzenLineSeries Smooth="true" 
                                                        Data="@repoGroup.DataPoints" 
                                                        CategoryProperty="Date" 
                                                        ValueProperty="TotalLines" 
                                                        Title="@repoGroup.RepositoryName"
                                                        Stroke="@repoGroup.Color">
                                            <RadzenSeriesDataLabels Visible="false" />
                                        </RadzenLineSeries>
                                    }
                                    <RadzenCategoryAxis>
                                        <RadzenAxisTitle Text="Date" />
                                    </RadzenCategoryAxis>
                                    <RadzenValueAxis>
                                        <RadzenAxisTitle Text="Lines of Code" />
                                    </RadzenValueAxis>
                                    <RadzenLegend Position="LegendPosition.Right" />
                                </RadzenChart>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-chart-line me-2"></i>
                                No chart data available for the selected time period.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>
                            Repository Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var repo in repositoryHistories)
                            {
                                var latestData = repo.DailyLineCounts.OrderByDescending(d => d.Date).FirstOrDefault();
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <i class="fab fa-github me-2"></i>
                                                @repo.Owner/@repo.RepositoryName
                                            </h6>
                                            @if (latestData != null)
                                            {
                                                <p class="card-text">
                                                    <small class="text-muted">Latest Data: @latestData.Date.ToString("MMM dd, yyyy")</small><br>
                                                    <strong>@latestData.TotalLines.ToString("N0")</strong> lines of code<br>
                                                    <span class="badge bg-success">+@latestData.LinesAdded</span>
                                                    <span class="badge bg-danger">-@latestData.LinesRemoved</span>
                                                    <span class="badge bg-info">@latestData.CommitCount commits</span>
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="card-text">
                                                    <small class="text-muted">No recent data available</small>
                                                </p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<RepositoryLineCountHistoryDto> repositoryHistories = new();
    private IEnumerable<ChartDataPoint> chartData = new List<ChartDataPoint>();
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private const int DAYS_TO_SHOW = 30;

    // Colors for different repositories
    private readonly string[] chartColors = new[]
    {
        "#FF6384", "#36A2EB", "#FFCE56", "#4BC0C0", "#9966FF",
        "#FF9F40", "#FF6384", "#C9CBCF", "#4BC0C0", "#FF6384"
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadChartData();
    }

    private async Task LoadChartData()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            StateHasChanged();

            repositoryHistories = (await Http.GetFromJsonAsync<List<RepositoryLineCountHistoryDto>>($"/api/repositories/allcharts/{DAYS_TO_SHOW}")) ?? new List<RepositoryLineCountHistoryDto>();
            
            // Transform data for chart
            chartData = TransformDataForChart();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private IEnumerable<ChartDataPoint> TransformDataForChart()
    {
        var allDataPoints = new List<ChartDataPoint>();

        foreach (var repo in repositoryHistories)
        {
            foreach (var dailyData in repo.DailyLineCounts)
            {
                allDataPoints.Add(new ChartDataPoint
                {
                    Date = dailyData.Date,
                    TotalLines = dailyData.TotalLines,
                    RepositoryName = $"{repo.Owner}/{repo.RepositoryName}",
                    RepositoryId = repo.RepositoryId
                });
            }
        }

        return allDataPoints.OrderBy(dp => dp.Date);
    }

    private string GetSeriesTitle()
    {
        if (repositoryHistories.Count == 1)
        {
            var repo = repositoryHistories.First();
            return $"{repo.Owner}/{repo.RepositoryName}";
        }
        return "All Repositories";
    }

    private IEnumerable<RepositoryChartGroup> GetRepositoryGroups()
    {
        var groups = new List<RepositoryChartGroup>();
        int colorIndex = 0;

        foreach (var repo in repositoryHistories)
        {
            var dataPoints = repo.DailyLineCounts.Select(d => new ChartDataPoint
            {
                Date = d.Date,
                TotalLines = d.TotalLines,
                RepositoryName = $"{repo.Owner}/{repo.RepositoryName}",
                RepositoryId = repo.RepositoryId
            }).OrderBy(dp => dp.Date);

            groups.Add(new RepositoryChartGroup
            {
                RepositoryName = $"{repo.Owner}/{repo.RepositoryName}",
                Color = chartColors[colorIndex % chartColors.Length],
                DataPoints = dataPoints
            });

            colorIndex++;
        }

        return groups;
    }

    private class RepositoryChartGroup
    {
        public string RepositoryName { get; set; } = string.Empty;
        public string Color { get; set; } = string.Empty;
        public IEnumerable<ChartDataPoint> DataPoints { get; set; } = new List<ChartDataPoint>();
    }

    private class ChartDataPoint
    {
        public DateTime Date { get; set; }
        public int TotalLines { get; set; }
        public string RepositoryName { get; set; } = string.Empty;
        public Guid RepositoryId { get; set; }
    }
}
