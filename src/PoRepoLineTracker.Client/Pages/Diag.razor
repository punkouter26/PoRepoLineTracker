@page "/diag"

@using PoRepoLineTracker.Client.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject IJSRuntime JSRuntime

<PageTitle>Diagnostics</PageTitle>

<div class="container mt-4">
    <h2>System Diagnostics</h2>
    <p>Current time: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
    
    <div class="row">
        <div class="col-md-12">
            <h4>Overall System Health</h4>
            <div class="card">
                <div class="card-body">
                    @if (overallHealthStatus == "Checking...")
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="ms-2">Checking system health...</span>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="@(overallHealthStatus == "Healthy" ? "text-success" : "text-danger")">
                                <i class="@(overallHealthStatus == "Healthy" ? "fas fa-check-circle" : "fas fa-times-circle")"></i>
                                @overallHealthStatus
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Azure Table Storage</h4>
            <div class="card">
                <div class="card-body">
                    @if (azureStorageStatus == "Checking...")
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="ms-2">Checking connection...</span>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="@(azureStorageStatus.Contains("Healthy") ? "text-success" : "text-danger")">
                                <i class="@(azureStorageStatus.Contains("Healthy") ? "fas fa-check-circle" : "fas fa-times-circle")"></i>
                                @azureStorageStatus
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <h4>GitHub API</h4>
            <div class="card">
                <div class="card-body">
                    @if (githubApiStatus == "Checking...")
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="ms-2">Checking connection...</span>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="@(githubApiStatus.Contains("Healthy") ? "text-success" : "text-danger")">
                                <i class="@(githubApiStatus.Contains("Healthy") ? "fas fa-check-circle" : "fas fa-times-circle")"></i>
                                @githubApiStatus
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    @if (healthChecks != null && healthChecks.Length > 0)
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <h4>Detailed Health Checks</h4>
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Component</th>
                                        <th>Status</th>
                                        <th>Description</th>
                                        <th>Duration (ms)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var check in healthChecks)
                                    {
                                        <tr>
                                            <td>@check.Name</td>
                                            <td>
                                                <span class="badge @(check.Status == "Healthy" ? "bg-success" : check.Status == "Degraded" ? "bg-warning" : "bg-danger") rounded-pill">
                                                    @check.Status
                                                </span>
                                            </td>
                                            <td>@(check.Description ?? "N/A")</td>
                                            <td>@check.Duration.ToString("F2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
    <div class="mt-4">
        <h4>System Information</h4>
        <div class="card">
            <div class="card-body">
                <p><strong>Environment:</strong> @environment</p>
                <p><strong>Version:</strong> @version</p>
                <p><strong>Last Updated:</strong> @lastUpdated.ToString("yyyy-MM-dd HH:mm:ss UTC")</p>
            </div>
        </div>
    </div>
</div>

@code {
    private string overallHealthStatus = "Checking...";
    private string azureStorageStatus = "Checking...";
    private string githubApiStatus = "Checking...";
    private string environment = "Development";
    private string version = "1.0.0";
    private DateTime lastUpdated = DateTime.UtcNow;
    private HealthCheck[] healthChecks = Array.Empty<HealthCheck>();

    protected override async Task OnInitializedAsync()
    {
        await CheckOverallHealth();
    }

    private async Task CheckOverallHealth()
    {
        try
        {
            var response = await Http.GetFromJsonAsync<HealthResponse>("/api/health");
            if (response != null)
            {
                overallHealthStatus = response.Status;
                lastUpdated = DateTime.UtcNow;
                
                // Convert response checks to HealthCheck array
                healthChecks = response.Checks.Select(c => new HealthCheck 
                { 
                    Name = c.Name, 
                    Status = c.Status,
                    Description = c.Description,
                    Duration = c.Duration
                }).ToArray();

                // Update individual statuses
                var azureCheck = healthChecks.FirstOrDefault(c => c.Name.Contains("azure", StringComparison.OrdinalIgnoreCase));
                var githubCheck = healthChecks.FirstOrDefault(c => c.Name.Contains("github", StringComparison.OrdinalIgnoreCase));
                
                azureStorageStatus = azureCheck?.Status ?? "Unknown";
                githubApiStatus = githubCheck?.Status ?? "Not Configured";
            }
            else
            {
                overallHealthStatus = "Unknown";
                azureStorageStatus = "Unknown";
                githubApiStatus = "Unknown";
            }
        }
        catch (Exception ex)
        {
            overallHealthStatus = $"Error: {ex.Message}";
            azureStorageStatus = $"Error: {ex.Message}";
            githubApiStatus = $"Error: {ex.Message}";
        }
    }

    public class HealthResponse
    {
        public string Status { get; set; } = string.Empty;
        public List<HealthCheckEntry> Checks { get; set; } = new();
        public double TotalDuration { get; set; }
    }

    public class HealthCheckEntry
    {
        public string Name { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public string? Description { get; set; }
        public double Duration { get; set; }
    }

    public class HealthCheck
    {
        public string Name { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public string? Description { get; set; }
        public double Duration { get; set; }
    }
}
