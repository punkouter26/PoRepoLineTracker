@page "/add-repository"
@inject HttpClient Http
@inject ILogger<AddRepository> Logger
@inject NavigationManager Navigation
@using PoRepoLineTracker.Client.Models
@using PoRepoLineTracker.Domain.Models
@using PoRepoLineTracker.Application.Models
@using Radzen.Blazor

<h3>Add New Repository</h3>

@if (!string.IsNullOrEmpty(pageState.ErrorMessage) && !pageState.ShowRepositorySelector)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@pageState.ErrorMessage
        <button type="button" class="btn-close" @onclick="() => pageState.ErrorMessage = string.Empty"></button>
    </div>
}

@if (!string.IsNullOrEmpty(pageState.AddRepoMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@pageState.AddRepoMessage
        <button type="button" class="btn-close" @onclick="() => pageState.AddRepoMessage = string.Empty"></button>
    </div>
}

<div class="mb-3">
    @if (pageState.ShowRepositorySelector)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Select Repositories from Your GitHub Account</h5>
                <button class="btn btn-sm btn-outline-light" @onclick="HideRepositorySelection">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="card-body">
                @if (pageState.IsLoadingGitHubRepos)
                {
                    <div class="text-center p-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading GitHub repositories...</span>
                        </div>
                        <p class="mt-2"><em>Loading your GitHub repositories...</em></p>
                    </div>
                }
                else if (pageState.GitHubUserRepositories.Any())
                {
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                            <span class="text-muted">Found @pageState.GitHubUserRepositories.Count repositories</span>
                            <div>
                                <button class="btn btn-sm btn-outline-primary me-2" @onclick="SelectAllRepositories">
                                    Select All
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="ClearAllSelections">
                                    Clear All
                                </button>
                            </div>
                        </div>
                        
                        <div class="repository-list-container border rounded">
                            @foreach (var repo in pageState.GitHubUserRepositories)
                            {
                                <div class="repository-item @(pageState.SelectedRepositories.Contains(repo) ? "selected" : "")">
                                    <input class="form-check-input repository-checkbox" 
                                           type="checkbox" 
                                           id="repo-@repo.Id" 
                                           checked="@pageState.SelectedRepositories.Contains(repo)"
                                           @onchange="@(e => ToggleRepositorySelection(repo, (bool)e.Value!))" />
                                    <label class="repository-label" for="repo-@repo.Id">
                                        <div class="repo-main-info">
                                            <div class="repo-name-desc">
                                                <strong>@repo.Owner/@repo.Name</strong>
                                                @if (!string.IsNullOrEmpty(repo.Description))
                                                {
                                                    <br><small class="text-muted repo-description">@repo.Description</small>
                                                }
                                            </div>
                                            <div class="repo-badges">
                                                @if (!string.IsNullOrEmpty(repo.Language))
                                                {
                                                    <span class="badge bg-secondary">@repo.Language</span>
                                                }
                                                @if (repo.Private)
                                                {
                                                    <span class="badge bg-warning text-dark">Private</span>
                                                }
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            }
                        </div>
                        
                        <div class="mt-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <span class="text-muted">@pageState.SelectedRepositories.Count selected</span>
                            <button class="btn btn-success" 
                                    @onclick="AddSelectedRepositories" 
                                    disabled="@(pageState.IsAddingRepository || !pageState.SelectedRepositories.Any())">
                                @if (pageState.IsAddingRepository)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                }
                                Add Selected (@pageState.SelectedRepositories.Count)
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>No Repositories Found</h6>
                        @if (!string.IsNullOrEmpty(pageState.ErrorMessage))
                        {
                            <p class="mb-2">@pageState.ErrorMessage</p>
                        }
                        else
                        {
                            <p class="mb-2">No repositories were found in your GitHub account.</p>
                        }
                        <hr>
                        <p class="mb-0 small">
                            <strong>Please ensure:</strong><br>
                            • Your GitHub Personal Access Token is properly configured in Settings<br>
                            • The token has the required permissions (repo scope)<br>
                            • You have at least one repository in your GitHub account
                        </p>
                    </div>
                }
            </div>
        </div>
    }
    
    @* Single repository mode removed as requested *@
    
    @if (pageState.IsAddingRepository)
    {
        <div class="mb-3">
            <div class="progress" style="height: 25px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                     role="progressbar" 
                     style="width: @(pageState.ProgressPercentage)%" 
                     aria-valuenow="@pageState.ProgressPercentage" 
                     aria-valuemin="0" 
                     aria-valuemax="100">
                    @(pageState.ProgressPercentage)%
                </div>
            </div>
            <div class="text-center mt-2">
                <small class="text-muted">@pageState.ProgressMessage</small>
            </div>
        </div>
    }
</div>

@code {
    private RepositoryPageState pageState = new();
    @inject HttpClient Http
    @inject ILogger<AddRepository> Logger

    protected override async Task OnInitializedAsync()
    {
        pageState.ShowRepositorySelector = true;
        await LoadGitHubRepositories();
    }

    private async Task LoadGitHubRepositories()
    {
        pageState.IsLoadingGitHubRepos = true;
        pageState.ErrorMessage = string.Empty;
        StateHasChanged();
        
        try
        {
            var response = await Http.GetAsync("/api/github/user-repositories");
            
            if (response.IsSuccessStatusCode)
            {
                var gitHubRepos = await response.Content.ReadFromJsonAsync<List<GitHubUserRepositoryDto>>();
                // Sort repositories alphabetically by name
                pageState.GitHubUserRepositories = gitHubRepos?.OrderBy(r => r.Name).ToList() ?? new List<GitHubUserRepositoryDto>();
                Logger.LogInformation("Loaded {Count} GitHub user repositories.", pageState.GitHubUserRepositories.Count);
            }
            else
            {
                var errorMessage = await response.Content.ReadAsStringAsync();
                Logger.LogWarning("Failed to load GitHub repositories: {StatusCode} - {ErrorMessage}", response.StatusCode, errorMessage);
                pageState.ErrorMessage = $"Unable to load repositories: {errorMessage}";
                pageState.GitHubUserRepositories = new List<GitHubUserRepositoryDto>();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading GitHub repositories: {Message}", ex.Message);
            pageState.ErrorMessage = $"Error loading GitHub repositories: {ex.Message}";
            pageState.GitHubUserRepositories = new List<GitHubUserRepositoryDto>();
        }
        finally
        {
            pageState.IsLoadingGitHubRepos = false;
            StateHasChanged();
        }
    }

    private void ToggleRepositorySelection(GitHubUserRepositoryDto repository, bool isSelected)
    {
        if (isSelected)
        {
            if (!pageState.SelectedRepositories.Contains(repository))
            {
                pageState.SelectedRepositories.Add(repository);
            }
        }
        else
        {
            pageState.SelectedRepositories.Remove(repository);
        }
        StateHasChanged();
    }

    private void SelectAllRepositories()
    {
        pageState.SelectedRepositories.Clear();
        foreach (var repo in pageState.GitHubUserRepositories)
        {
            pageState.SelectedRepositories.Add(repo);
        }
        StateHasChanged();
    }

    private void ClearAllSelections()
    {
        pageState.SelectedRepositories.Clear();
        StateHasChanged();
    }

    private async Task AddSelectedRepositories()
    {
        if (pageState.IsAddingRepository || !pageState.SelectedRepositories.Any()) return;
        
        pageState.IsAddingRepository = true;
        pageState.ClearMessages();
        StateHasChanged();
        
        try
        {
            Logger.LogInformation("=== START AddSelectedRepositories ===");
            Logger.LogInformation("Number of selected repositories: {Count}", pageState.SelectedRepositories.Count);
            
            // Log each selected repository
            var selectedList = pageState.SelectedRepositories.ToList();
            for (int i = 0; i < selectedList.Count; i++)
            {
                var repo = selectedList[i];
                Logger.LogInformation("Selected Repo [{Index}]: FullName='{FullName}', CloneUrl='{CloneUrl}'", 
                    i, repo.FullName, repo.CloneUrl);
            }
            
            // Step 1: Prepare repository data (25%)
            pageState.SetProgress($"Preparing {pageState.SelectedRepositories.Count} repositories...", 25);
            StateHasChanged();
            await Task.Delay(300);

            var repositoriesToAdd = pageState.SelectedRepositories.Select(repo =>
            {
                var fullNameParts = repo.FullName.Split('/');
                Logger.LogInformation("Splitting FullName '{FullName}' into Owner='{Owner}' and RepoName='{RepoName}'",
                    repo.FullName, fullNameParts[0], fullNameParts[1]);
                    
                return new BulkRepositoryDto
                {
                    Owner = fullNameParts[0],
                    RepoName = fullNameParts[1],
                    CloneUrl = repo.CloneUrl
                };
            }).ToList();

            Logger.LogInformation("Prepared {Count} repositories for API call", repositoriesToAdd.Count);
            
            // Log detailed info about what we're sending
            for (int i = 0; i < repositoriesToAdd.Count; i++)
            {
                var repo = repositoriesToAdd[i];
                Logger.LogInformation("Sending Repo [{Index}]: Owner='{Owner}', RepoName='{RepoName}', CloneUrl='{CloneUrl}'",
                    i, repo.Owner, repo.RepoName, repo.CloneUrl);
            }

            // Step 2: Adding to database (50%)
            pageState.SetProgress("Adding repositories to database...", 50);
            StateHasChanged();

            Logger.LogInformation("Making POST request to /api/repositories/bulk with {Count} repositories", repositoriesToAdd.Count);
            var response = await Http.PostAsJsonAsync("/api/repositories/bulk", repositoriesToAdd);
            
            Logger.LogInformation("Bulk repository add response: Status={StatusCode}", response.StatusCode);
            
            if (response.IsSuccessStatusCode)
            {
                // Step 3: Repositories added successfully (75%)
                pageState.SetProgress("Repositories added! Initializing analysis...", 75);
                StateHasChanged();
                await Task.Delay(500);

                Logger.LogInformation("Reading response content as JSON...");
                var addedRepos = await response.Content.ReadFromJsonAsync<List<GitHubRepository>>();
                
                Logger.LogInformation("API returned {Count} repositories", addedRepos?.Count ?? 0);
                
                if (addedRepos != null && addedRepos.Any())
                {
                    for (int i = 0; i < addedRepos.Count; i++)
                    {
                        var repo = addedRepos[i];
                        Logger.LogInformation("Returned Repo [{Index}]: {Owner}/{Name} (ID: {Id})",
                            i, repo.Owner, repo.Name, repo.Id);
                    }
                }
                else
                {
                    Logger.LogWarning("API returned ZERO repositories! This is the problem!");
                }
                
                // Step 4: Complete (100%)
                pageState.SetProgress("Complete! Repositories are now being analyzed.", 100);
                StateHasChanged();
                await Task.Delay(1000);

                pageState.AddRepoMessage = $"{addedRepos?.Count ?? pageState.SelectedRepositories.Count} repositories added successfully! Analysis will begin automatically.";
                pageState.SelectedRepositories.Clear(); // Clear selections
                
                // Navigate back to home page (repositories page)
                Logger.LogInformation("Navigating to repositories page...");
                await Task.Delay(1500); // Brief delay to show success message
                Navigation.NavigateTo("/repositories");
            }
            else
            {
                pageState.SetProgress("Error occurred", 100);
                StateHasChanged();
                await Task.Delay(500);

                var errorContent = await response.Content.ReadAsStringAsync();
                Logger.LogError("Bulk repository add failed: Status={StatusCode}, Content={ErrorContent}", response.StatusCode, errorContent);
                pageState.AddRepoMessage = $"Error adding repositories: {response.StatusCode} - {errorContent}";
            }
        }
        catch (Exception ex)
        {
            pageState.SetProgress("Error occurred", 100);
            StateHasChanged();
            await Task.Delay(500);

            pageState.AddRepoMessage = $"Error adding repositories: {ex.Message}";
            Logger.LogError(ex, "Error adding repositories: {Message}", ex.Message);
        }
        finally
        {
            pageState.IsAddingRepository = false;
            pageState.ProgressMessage = string.Empty;
            pageState.ProgressPercentage = 0;
            StateHasChanged();
        }
    }

    private async Task ShowRepositorySelection()
    {
        Logger.LogInformation("ShowRepositorySelection called. Current ShowRepositorySelector: {ShowRepositorySelector}", pageState.ShowRepositorySelector);
        pageState.ShowRepositorySelector = true;
        Logger.LogInformation("ShowRepositorySelector set to true. New value: {ShowRepositorySelector}", pageState.ShowRepositorySelector);
        await LoadGitHubRepositories();
        Logger.LogInformation("LoadGitHubRepositories completed. Calling StateHasChanged.");
        StateHasChanged();
    }

    private void HideRepositorySelection()
    {
        pageState.ShowRepositorySelector = false;
        pageState.ClearSelection();
        StateHasChanged();
    }
}

<style>
    /* Repository List Container - Fixed height with scroll */
    .repository-list-container {
        max-height: 500px;
        overflow-y: auto;
        overflow-x: hidden;
        background-color: var(--bg-secondary, #f8f9fa);
    }
    
    /* Individual Repository Item */
    .repository-item {
        display: flex;
        align-items: flex-start;
        padding: 0.75rem;
        border-bottom: 1px solid var(--border-light, #dee2e6);
        transition: background-color 0.2s ease;
        gap: 0.75rem;
    }
    
    .repository-item:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }
    
    .repository-item.selected {
        background-color: rgba(0, 123, 255, 0.1);
    }
    
    .repository-item:last-child {
        border-bottom: none;
    }
    
    /* Checkbox styling */
    .repository-checkbox {
        flex-shrink: 0;
        margin-top: 0.25rem;
        cursor: pointer;
        width: 1.2rem;
        height: 1.2rem;
    }
    
    /* Label takes up remaining space */
    .repository-label {
        flex-grow: 1;
        margin-bottom: 0;
        cursor: pointer;
        width: 100%;
        overflow: hidden;
    }
    
    /* Main info container */
    .repo-main-info {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        width: 100%;
    }
    
    /* Name and description */
    .repo-name-desc {
        flex: 1;
        min-width: 0; /* Allow text truncation */
        overflow: hidden;
    }
    
    .repo-name-desc strong {
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    .repo-description {
        display: block;
        margin-top: 0.25rem;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        white-space: normal;
    }
    
    /* Badges container */
    .repo-badges {
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        align-items: flex-end;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .repo-main-info {
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .repo-badges {
            flex-direction: row;
            align-items: flex-start;
        }
        
        .repository-list-container {
            max-height: 400px;
        }
    }
    
    /* Smooth scrollbar styling */
    .repository-list-container::-webkit-scrollbar {
        width: 8px;
    }
    
    .repository-list-container::-webkit-scrollbar-track {
        background: var(--bg-tertiary, #f1f3f5);
    }
    
    .repository-list-container::-webkit-scrollbar-thumb {
        background: var(--border-medium, #cbd5e1);
        border-radius: 4px;
    }
    
    .repository-list-container::-webkit-scrollbar-thumb:hover {
        background: var(--border-dark, #94a3b8);
    }
</style>
